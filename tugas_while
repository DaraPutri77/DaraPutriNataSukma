    <h1>Hasil Perulangan While (Perkalian 3)</h1>
    
    <table>
        <thead>
            <tr>
                <th>Operasi</th>
                <th>Hasil</th>
            </tr>
        </thead>
        <tbody>
            <?php
            
            $angka = 1; 
            $pengali = 3;

            while ($angka <= 10) {
                $hasil = $pengali * $angka;
                
                echo "<tr>";
                echo "<td>" . $pengali . " x " . $angka . "</td>";
                echo "<td>" . $hasil . "</td>";
                echo "</tr>";

                $angka++; 
            }
            ?>
        </tbody>
    </table>

